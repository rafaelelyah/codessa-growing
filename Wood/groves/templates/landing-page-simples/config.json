{
  "name": "landing-page-simples",
  "displayName": "Landing Page Simples",
  "version": "1.0.0",
  "description": "Template de landing page simples e moderna para Codessa Growing",
  "author": "Codessa Team",
  "type": "grove-template",
  "category": "landing-page",
  "tags": ["landing", "simples", "marketing", "one-page"],
  "compatibility": {
    "codessa-growing": ">=1.0.0",
    "vite": ">=4.0.0",
    "sass": ">=1.60.0"
  },
  "features": [
    "Responsive design",
    "Smooth scrolling",
    "Form validation",
    "Animations on scroll",
    "SEO optimized",
    "Performance optimized",
    "Accessibility compliant"
  ],
  "pages": ["index.html"],
  "customizations": {
    "siteTitle": "Minha Empresa",
    "siteDescription": "Soluções inovadoras para seu negócio",
    "heroTitle": "Transforme seu negócio com nossas soluções",
    "heroSubtitle": "Tecnologia de ponta para resultados extraordinários",
    "aboutTitle": "Sobre Nós",
    "aboutDescription": "Somos especialistas em criar soluções digitais que fazem a diferença no seu negócio.",
    "servicesTitle": "Nossos Serviços",
    "contactTitle": "Entre em Contato",
    "contactDescription": "Pronto para começar? Entre em contato conosco hoje mesmo."
  },
  "colors": {
    "primary": "#FF6B35",
    "secondary": "#F7931E",
    "accent": "#2D3748",
    "neutral": "#6B7280"
  },
  "typography": {
    "fontFamily": "'Inter', sans-serif",
    "fontSize": {
      "base": "16px",
      "heading": "2.25rem",
      "subheading": "1.5rem"
    }
  },
  "spacing": {
    "section": "5rem",
    "element": "2rem"
  },
  "variables": {
    "siteTitle": {
      "type": "string",
      "default": "Minha Empresa",
      "description": "Título do site exibido na aba do navegador"
    },
    "siteDescription": {
      "type": "string",
      "default": "Soluções inovadoras para seu negócio",
      "description": "Descrição do site para SEO"
    },
    "heroTitle": {
      "type": "string",
      "default": "Transforme seu negócio com nossas soluções",
      "description": "Título principal da seção hero"
    },
    "heroSubtitle": {
      "type": "string",
      "default": "Tecnologia de ponta para resultados extraordinários",
      "description": "Subtítulo da seção hero"
    },
    "aboutTitle": {
      "type": "string",
      "default": "Sobre Nós",
      "description": "Título da seção sobre"
    },
    "aboutDescription": {
      "type": "string",
      "default": "Somos especialistas em criar soluções digitais que fazem a diferença no seu negócio.",
      "description": "Descrição da seção sobre"
    },
    "servicesTitle": {
      "type": "string",
      "default": "Nossos Serviços",
      "description": "Título da seção de serviços"
    },
    "contactTitle": {
      "type": "string",
      "default": "Entre em Contato",
      "description": "Título da seção de contato"
    },
    "contactDescription": {
      "type": "string",
      "default": "Pronto para começar? Entre em contato conosco hoje mesmo!",
      "description": "Descrição da seção de contato"
    }
  },
  "structure": {
    "src": {
      "main.js": "Arquivo JavaScript principal com funcionalidades interativas",
      "index.html": "Template HTML principal da landing page",
      "foundation": {
        "_index.scss": "Arquivo principal de estilos do template",
        "seeds": {
          "_index.scss": "Customizações de cores e variáveis base"
        },
        "soils": {
          "_index.scss": "Variáveis CSS customizadas"
        },
        "barks": {
          "_index.scss": "Estilos específicos e animações"
        }
      }
    },
    "config.json": "Arquivo de configuração do template"
  },
  "dependencies": {
    "required": [
      "@codessa/growing-terrain"
    ],
    "optional": [
      "gsap",
      "swiper",
      "aos"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "customize": "codessa customize"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codessa/growing"
  },
  "keywords": [
    "landing-page",
    "template",
    "codessa-growing",
    "vite",
    "sass",
    "responsive"
  ]
}