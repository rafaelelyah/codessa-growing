{
  "foundation": {
    "description": "Foundation - Normalização e Reset",
    "box-sizing": {
      "html": {
        "font-size": "100%",
        "scroll-behavior": "smooth",
        "box-sizing": "border-box"
      },
      "universal": {
        "selector": "*, *::before, *::after",
        "box-sizing": "inherit"
      }
    },
    "margin-reset": {
      "selectors": "body, h1, h2, h3, h4, h5, h6, p, figure, blockquote, dl, dd, ul, ol, fieldset",
      "margin": "0"
    },
    "media-normalization": {
      "selectors": "img, picture, video, canvas, svg",
      "max-width": "100%",
      "height": "auto",
      "display": "block"
    },
    "form-reset": {
      "input-elements": {
        "selectors": "input, button, textarea, select",
        "font-family": "inherit",
        "font-size": "inherit",
        "margin": "0",
        "padding": "0",
        "border": "none",
        "background-color": "transparent",
        "outline": "none"
      },
      "button": {
        "cursor": "pointer"
      },
      "fieldset-legend": {
        "selectors": "fieldset, legend",
        "border": "none",
        "padding": "0"
      }
    },
    "accessibility": {
      "focus-visible": {
        "outline": "2px solid blue",
        "outline-offset": "2px"
      },
      "focus-hidden": {
        "selector": ":focus:not(:focus-visible)",
        "outline": "none"
      },
      "visually-hidden": {
        "position": "absolute !important",
        "width": "1px",
        "height": "1px",
        "padding": "0",
        "margin": "-1px",
        "overflow": "hidden",
        "clip": "rect(0 0 0 0)",
        "white-space": "nowrap",
        "border": "0"
      }
    }
  }
}